<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bakgrondsort"
    tools:context=".average">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/averagetitile"
        android:layout_width="match_parent"
        android:text="your  class average ðŸ“š"
        android:textColor="#FFC107"
        app:layout_constraintBottom_toTopOf="@id/massegeimage"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        app:layout_constraintBottom_toTopOf="@id/textaverage"
        android:id="@+id/massegeimage"
        android:layout_width="wrap_content"
        android:src="@drawable/checkapp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/averagetitile"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textaverage"
        android:layout_width="wrap_content"
        android:text="Your class average is :"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/result"
        android:textColor="#FFC107"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/massegeimage"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:text="19.97"
        android:textSize="28dp"
        android:textStyle="italic"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#CDDC39"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textaverage"
        android:layout_height="wrap_content"/>
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to first page "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#FF0303"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toTopOf="@+id/result"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>